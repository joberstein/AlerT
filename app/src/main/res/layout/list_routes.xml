<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/single_line_list_tile_height">

    <ImageView
        android:id="@+id/custom_item_icon"
        android:layout_width="@dimen/single_line_list_avatar_size"
        android:layout_height="@dimen/single_line_list_avatar_size"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/list_avatar_padding_start"
        android:layout_marginEnd="@dimen/list_avatar_padding_end"
        android:gravity="center_vertical"
        android:src="@drawable/circle_green"/>

    <TextView
        android:id="@+id/custom_item_primary_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/custom_item_icon"
        android:gravity="center_vertical"
        android:textSize="@dimen/single_line_list_font_size_primary"/>

    <include layout="@layout/route_alert"
        android:id="@+id/custom_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toStartOf="@id/custom_item_chevron"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/custom_item_chevron"
        android:layout_width="@dimen/list_icon_right_size"
        android:layout_height="@dimen/list_icon_right_size"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/list_icon_right_padding_end"
        android:gravity="center_vertical"/>

</RelativeLayout>