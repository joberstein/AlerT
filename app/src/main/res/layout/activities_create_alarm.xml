<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingStart="@dimen/list_text_padding_start"
    android:paddingEnd="@dimen/list_text_padding_end"
    tools:context="com.jesseoberstein.alert.activities.alarm.CreateAlarm">

    <!-- Nickname -->
    <include layout="@layout/input_nickname"/>

    <!-- Station -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:completionThreshold="1"
            android:imeOptions="actionNext"
            android:hint="@string/station"
            android:layout_marginBottom="20dp"/>

    </android.support.design.widget.TextInputLayout>

    <include layout="@layout/input_focus_holder"/>

    <!-- Direction -->
    <LinearLayout
        android:id="@+id/directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/create_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:focusable="true"
        android:clickable="true"
        android:text="@string/create"/>

</LinearLayout>
