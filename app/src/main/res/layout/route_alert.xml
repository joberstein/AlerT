<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <!-- icon -->
    <ImageView
            android:id="@+id/custom_item_info_background"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:src="@drawable/circle_red_alert"/>

    <TextView
            android:id="@+id/custom_item_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/custom_item_info_background"
            android:layout_alignTop="@+id/custom_item_info_background"
            android:layout_alignBottom="@+id/custom_item_info_background"
            android:layout_alignEnd="@+id/custom_item_info_background"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textColor="@color/white"/>

</RelativeLayout>