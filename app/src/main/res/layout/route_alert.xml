<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!-- icon -->
    <ImageView
            android:id="@+id/custom_item_info_background"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:src="@drawable/circle_red_alert"/>

    <TextView
            android:id="@+id/custom_item_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/custom_item_info_background"
            android:layout_alignTop="@+id/custom_item_info_background"
            android:layout_alignBottom="@+id/custom_item_info_background"
            android:layout_alignEnd="@+id/custom_item_info_background"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="20"/>

</RelativeLayout>