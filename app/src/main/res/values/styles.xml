<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="menuItemIconColor">@color/white</item>
    </style>

    <style name="BlueLine" parent="AppTheme">
        <item name="colorPrimary">@color/blue_line</item>
        <item name="colorAccent">@color/blue_line</item>
    </style>

    <style name="GreenLine" parent="AppTheme">
        <item name="colorPrimary">@color/green_line</item>
        <item name="colorAccent">@color/green_line</item>
    </style>

    <style name="OrangeLine" parent="AppTheme">
        <item name="colorPrimary">@color/orange_line</item>
        <item name="colorAccent">@color/orange_line</item>
    </style>

    <style name="RedLine" parent="AppTheme">
        <item name="colorPrimary">@color/red_line</item>
        <item name="colorAccent">@color/red_line</item>
    </style>

    <style name="SilverLine" parent="AppTheme">
        <item name="colorPrimary">@color/silver_line</item>
        <item name="colorAccent">@color/silver_line</item>
    </style>

    <style name="DefaultRoute" parent="AppTheme">
        <item name="colorPrimary">@color/default_route</item>
        <item name="colorAccent">@color/default_route</item>
    </style>

    <style name="White" parent="AppTheme">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/default_route</item>
        <item name="android:strokeColor">@color/default_route</item>
        <item name="android:strokeWidth">2</item>
    </style>

    <style name="AlarmSettingsLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/black</item>
        <item name="menuItemIconColor">@android:color/black</item>
        <item name="tabsBackgroundColor">@color/white</item>
        <item name="tabIconColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AlarmSettingsDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="menuItemIconColor">@color/white</item>
        <item name="tabsBackgroundColor">@color/white</item>
        <item name="tabIconColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AlarmSettingsDark.Blue">
        <item name="colorPrimary">@color/blue_line</item>
        <item name="tabSelectedIndicatorColor">@color/blue_line</item>
    </style>

    <style name="AlarmSettingsLight.Bus">
        <item name="colorPrimary">@color/bus</item>
        <item name="tabSelectedIndicatorColor">@color/bus</item>
    </style>

    <style name="AlarmSettingsDark.Default">
        <item name="colorPrimary">@color/default_route</item>
        <item name="tabSelectedIndicatorColor">@color/default_route</item>
    </style>

    <style name="AlarmSettingsDark.Green">
        <item name="colorPrimary">@color/green_line</item>
        <item name="tabSelectedIndicatorColor">@color/green_line</item>
    </style>

    <style name="AlarmSettingsDark.Red">
        <item name="colorPrimary">@color/red_line</item>
        <item name="tabSelectedIndicatorColor">@color/red_line</item>
    </style>

    <style name="AlarmSettingsDark.Orange">
        <item name="colorPrimary">@color/orange_line</item>
        <item name="tabSelectedIndicatorColor">@color/orange_line</item>
    </style>

    <style name="AlarmSettingsDark.Silver">
        <item name="colorPrimary">@color/silver_line</item>
        <item name="tabSelectedIndicatorColor">@color/silver_line</item>
    </style>

    <style name="AlarmPagerBottomNavigation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bottom_nav_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SingleChoiceDropdown">
        <item name="android:dropDownItemStyle">@android:layout/simple_list_item_single_choice</item>
        <item name="android:spinnerItemStyle">@android:layout/simple_list_item_single_choice</item>
        <item name="android:spinnerDropDownItemStyle">@android:layout/simple_list_item_single_choice</item>
    </style>

    <style name="SingleChoiceDropdown.Offset" parent="SingleChoiceDropdown">
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

</resources>
