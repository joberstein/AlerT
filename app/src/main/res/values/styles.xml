<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.BlueLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/blue_line</item>
    </style>

    <style name="AppTheme.GreenLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/green_line</item>
    </style>

    <style name="AppTheme.OrangeLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:strokeColor">@color/orange_line</item>
    </style>

    <style name="AppTheme.RedLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/red_line</item>
    </style>

    <style name="AppTheme.SilverLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/silver_line</item>
    </style>

    <style name="AppTheme.White" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="android:strokeWidth">2</item>
    </style>

    <style name="AlarmPagerBottomNavigation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bottom_nav_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SingleChoiceDropdown">
        <item name="android:dropDownItemStyle">@android:layout/simple_list_item_single_choice</item>
        <item name="android:spinnerItemStyle">@android:layout/simple_list_item_single_choice</item>
        <item name="android:spinnerDropDownItemStyle">@android:layout/simple_list_item_single_choice</item>
    </style>

    <style name="SingleChoiceDropdown.Offset" parent="SingleChoiceDropdown">
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

</resources>
